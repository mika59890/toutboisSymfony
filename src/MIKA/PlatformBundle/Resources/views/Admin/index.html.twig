{% extends '::layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-2 col-md-2">
                {% include '::menu.html.twig' %}
                {% include '::menuAdmin.html.twig' %}
            </div>
            <div class="col-lg-10 col-md-10">
                <h1>Liste des commandes</h1>

                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Référence</th>
                        <th>Client</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td>{{ commande.date|date('d-m-Y H:i:s') }}</td>
                            <td>{{ commande.products }}</td>
                            <td>{{ commande.user.username }}</td>
                            <td>
                                <a href="{{ path('mika_platform_adminShowFacture', { 'id' : commande.id }) }}"><i class="glyphicon glyphicon-book"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}