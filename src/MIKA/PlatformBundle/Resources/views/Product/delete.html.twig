
{% extends "MIKAPlatformBundle::layout.html.twig" %}
{% block title %}
    Supprimer un produit- {{ parent() }}
{% endblock %}
{% block mikaplatform_body %}
    <div class="bodycenter">
        <h2>Supprimer un produit</h2>
        <p>
            Etes-vous certain de vouloir supprimer le produit "{{ product.nameproduct }}" ?
        </p>
        {# On met l'id de l'annonce dans la route de l'action du formulaire #}
        <form action="{{ path('mika_platform_delete', {'id': product.id}) }}" method="post">
            <a href="{{ path('mika_platform_detail', {'id': product.id}) }}" class="btn btn-default">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Retour au produit
            </a>
            {# Ici j'ai écrit le bouton de soumission à la main #}
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            {# Ceci va générer le champ CSRF #}
            {{ form_rest(form) }}
        </form>
    </div>
{% endblock %}