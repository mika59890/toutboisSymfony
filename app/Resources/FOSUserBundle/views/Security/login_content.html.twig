{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

        <div class="row">
            <div class="col-md-6 col-lg-6 droite">
                <label for="username">{{ 'security.login.username'|trans }}</label>
            </div>
            <div class="col-md-6 col-lg-6">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" /><br>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-6 droite">
                <label for="password">{{ 'security.login.password'|trans }}</label>
            </div>
            <div class="col-md-6 col-lg-6">
                <input type="password" id="password" name="_password" required="required" autocomplete="current-password" /><br>
            </div>
        </div>
        <div class="center">
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label><br>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <a href="{{ path('fos_user_resetting_request') }}">Mot de passe perdu ?</a>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <h4>Pas encore inscrit ?</h4>
                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary">S'inscrire</a>

                </div>
        </div>
</form>
