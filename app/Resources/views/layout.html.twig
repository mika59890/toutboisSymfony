<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title %}Toutbois{% endblock %}</title>
        <meta name="keywords" content="{% block motsCles %}{% endblock %}" />
        <meta name="description" content="{% block description %}{% endblock %}" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        {% block stylesheets %}
            {# On charge le CSS de bootstrap depuis le site directement #}
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('bundles/mikaplatform/css/platform.css')}}">
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container-fluid">
                        <div class="col-md-1 col-lg-1 ">
                            <a href="{{ path('mika_platform_home') }}">
                                <img src="{{ asset('bundles/mikaplatform/img/Logo-Toutbois.png')}}">
                            </a>
                        </div>

                        <div class="col-lg-offset-1 col-md-5 col-lg-5">
                            <h2>
                                Bienvenue
                                {% if app.user != null %}
                                    {{ app.user.firstname }}
                                {% endif %}
                            </h2>
                        </div>
                        <div class="col-md-4 col-lg-4">
                            {{ render(controller('MIKAPlatformBundle:Product:research')) }}
                        </div>
                        <div class="col-md-1 col-lg-1">
                            <ul class="nav nav-list">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li><a href="{{path('fos_user_security_logout')}}">Déconnexion</a></li>
                                {% else %}
                                    <li>
                                        <a href="{{ path('fos_user_security_login') }}">Connexion</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    {% block body %}
                    {% endblock %}
                </div>
            </div>
        </div>
        <hr>
        <footer id="footer" class="vspace20">
            <div class="container">
                <div class="row">
                    <div class="col-md-offset-2 col-lg-offset-2 col-md-2 col-lg-2 ">
                        <h4>Informations</h4>
                        <ul class="nav nav-stacked">
                            {{ render(controller('MIKAPageBundle:Page:menu')) }}
                        </ul>
                    </div>

                    <div class="col-md-3 col-lg-3">
                        <h4>Notre entrepôt</h4>
                        <p><i class="glyphicon glyphicon-map-marker"></i>&nbsp;Paris 75 000 - 3 rue des jardins</p>
                    </div>
                    <div class="col-md-2 col-lg-2">
                        <h4>Nous suivre</h4>
                        <ul class="fa-ul">
                            <li><i class="fa-li fa fa-twitter"></i> Twitter</li>
                            <li><i class="fa-li fa fa-facebook-official"></i> Facebook</li>
                            <li><i class="fa-li fa fa-google-plus"></i> Google+</li>
                            <li><i class="fa-li fa fa-youtube-play"></i> Youtube</li>
                        </ul>
                    </div>
                    <div class="col-md-2 col-lg-2">
                        <h4>Nous contacter</h4>
                        <p><i class="glyphicon glyphicon-phone"></i>&nbsp;Tel: 02 35 00 00 00</p>
                        <p><i class="glyphicon glyphicon-print"></i>&nbsp;Fax: 02 35 00 00 00</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-offset-2 col-lg-offset-2 col-md-4 col-lg-4">
                        <p>&copy; Copyright {{ "now"|date('Y')}} - Mika</p>
                    </div>

                </div>
            </div>
        </footer>
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>